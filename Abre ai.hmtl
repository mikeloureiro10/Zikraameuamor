<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Eu te amo, Zikra ❤️</title>
  <style>
    :root { --bg:#0b0b12; --txt:#fff; }
    * { box-sizing:border-box; }
    html,body { height:100%; margin:0; background:radial-gradient(1200px 600px at 50% 120%, #1b1b2a, #0b0b12); color:var(--txt); font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
    .wrap { position:relative; height:100%; display:flex; align-items:center; justify-content:center; text-align:center; overflow:hidden; padding:24px; }
    h1 { font-size: clamp(28px, 8vw, 72px); line-height:1.1; margin:0; letter-spacing:0.5px; text-shadow:0 4px 14px rgba(255,0,85,.35); animation:pulse 2s ease-in-out infinite; }
    .sub { font-size: clamp(14px, 3.2vw, 22px); opacity:.9; margin-top:12px; }
    @keyframes pulse {
      0%,100% { transform: scale(1); }
      50% { transform: scale(1.06); }
    }

    /* corações flutuando */
    .heart { position:absolute; font-size:16px; opacity:0; animation: floatUp linear forwards; filter: drop-shadow(0 6px 10px rgba(255,0,85,.35)); }
    @keyframes floatUp {
      0%   { transform: translateY(20px) scale(.8) rotate(0deg); opacity:0; }
      10%  { opacity:.9; }
      90%  { opacity:.9; }
      100% { transform: translateY(-110vh) scale(1.2) rotate(20deg); opacity:0; }
    }

    /* brilho suave no fundo */
    .glow { position:absolute; inset:-30%; background: radial-gradient(closest-side, rgba(255,0,85,.06), transparent 70%); filter: blur(40px); pointer-events:none; }
    footer { position: absolute; bottom: 10px; left: 0; right: 0; text-align:center; font-size:12px; opacity:.6; }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="glow"></div>
    <main>
      <h1>Eu te amo, Zikra ❤️</h1>
      <div class="sub">pra sempre. sem mas, sem talvez.</div>
    </main>
  </div>
  <footer>feito com amor 💌</footer>

  <script>
    // gera corações aleatórios
    const qty = 40; // quantidade de corações
    const symbols = ["❤️","🩷","💕","💖","💘","💞","💓","💗"];
    const wrap = document.querySelector('.wrap');

    for (let i = 0; i < qty; i++) {
      const h = document.createElement('div');
      h.className = 'heart';
      h.textContent = symbols[Math.floor(Math.random()*symbols.length)];
      const size = 12 + Math.random()*28; // 12–40px
      const left = Math.random()*100;     // 0–100 vw
      const dur  = 6 + Math.random()*8;   // 6–14s
      const delay= Math.random()*6;       // 0–6s
      h.style.fontSize = size + 'px';
      h.style.left = left + 'vw';
      h.style.bottom = (-10 - Math.random()*20) + 'vh';
      h.style.animationDuration = dur + 's';
      h.style.animationDelay = delay + 's';
      wrap.appendChild(h);

      // loop infinito: quando terminar, reinicia
      h.addEventListener('animationend', () => {
        h.style.animation = 'none';
        // reset aleatório
        h.style.left = (Math.random()*100) + 'vw';
        h.style.bottom = (-10 - Math.random()*20) + 'vh';
        // força reflow e reativa animação
        void h.offsetWidth;
        h.style.animation = `floatUp linear ${6 + Math.random()*8}s ${Math.random()*6}s forwards`;
      });
    }
  </script>
</body>
</html>